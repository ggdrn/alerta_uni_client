        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@/*": ["resources/vue/*"]
        },
        "lib": ["ESNext", "DOM", "DOM.Iterable"]
    },
    "include": ["./resources/**/*.js", "./resources/**/*.vue"],
    "exclude": ["node_modules", "public"]
}
